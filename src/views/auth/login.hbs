<div class="container mt-5">

  <div class="row">
    <div class="col-lg-4 offset-lg-4">
      {{#if error}}
        <div class="alert alert-danger" role="alert">
          {{{error}}}
        </div>
      {{/if}}
      <h2 class="mb-4 text-center">Đăng Nhập</h2>
      <form
        autocomplete="off"
        spellcheck="false"
        action="/auth/login"
        method="POST"
      >
        <div class="form-group">
          <label for="email">
            <b>Email</b>
          </label>
          <input
            type="email"
            class="form-control"
            id="email"
            placeholder="Nhập địa chỉ Email..."
            name="email"
            value="{{#if email}} {{email}}
             {{/if}}"
          />

        </div>
        <div class="form-group">
          <label for="password">
            <b>Mật Khẩu</b>
          </label>
          <input
            type="password"
            class="form-control"
            id="password"
            placeholder="Nhập Mật Khẩu..."
            name="password"
            value="{{#if password}} {{password}}
             {{/if}}"
          />
        </div>

        <button type="submit" class="btn btn-success">Đăng Nhập</button>
      </form>
    </div>
  </div>
</div>